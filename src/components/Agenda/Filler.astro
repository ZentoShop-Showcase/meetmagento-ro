---
import { Image } from "astro:assets";

import RegistrationIcon from '../../assets/icons/agenda/registration.svg';
import CoffeeIcon from '../../assets/icons/agenda/coffee.svg';
import LunchIcon from '../../assets/icons/agenda/lunch.svg';
import PartyIcon from '../../assets/icons/agenda/party.svg';
import OpeningIcon from '../../assets/icons/agenda/opening.svg';
import YouTubeIcon from '../../assets/icons/youtube.svg';

const { icon, title, subtitle, map, video } = Astro.props;

let iconImg;
switch (icon) {
    case 'registration':
        iconImg = RegistrationIcon;
        break;
    case 'coffee':
        iconImg = CoffeeIcon;
        break;
    case 'lunch':
        iconImg = LunchIcon;
        break;
    case 'party':
        iconImg = PartyIcon;
        break;
    case 'opening':
        iconImg = OpeningIcon;
        break;
    default:
        iconImg = undefined;
        break;
}

---

<div class="flex flex-wrap items-start justify-center mx-auto">
    <div class="basis-full sm:basis-1/2 relative md:basis-1/3 bg-gray-50 h-[162px] flex items-center justify-center">
        {iconImg !== undefined ?
            <Image
                src={iconImg}
                alt={title}
                class="object-contain"
                width="80"
            />
        : null}
    </div>
    <div class="basis-full p-4 sm:basis-1/2 sm:py-0 sm:px-4 md:basis-2/3 md:py-6">
        <h4 class="text-xl font-semibold pb-3 pt-2">{title}</h4>
        <p class="text-l font-normal text-gray-600 pb-6">
            {subtitle}
        </p>
        {map && 
            <a href={map} target="_blank" rel="noopener noreferrer" class="text-l font-normal text-gray-600 underline">
                View on Google Maps
            </a>
        }
        {video !== undefined &&
            <p>
                <a href={video} target="_blank" rel="noopener" 
                    class="w-full max-w-32 bg-orange-600 button-s text-white rounded
                        py-3 px-4 text-center hover:bg-orange-700 focus:outline-none">
                    <Image src={YouTubeIcon} class="inline-block w-6 h-6 mr-2" alt="YouTube Icon" />
                    Watch on YouTube
                </a>
            </p>
        }
    </div>
</div>
