---
import { Picture } from '@astrojs/image/components';

import papers from '../../assets/banners/call-for-papers.png';

import Button from '../Button.astro';

// export interface Props {
// }

// const {  } = Astro.props;
---
<div id="call-for-papers" class="basis-full mb-10 md:basis-6/12 md:mb-0">
    <Picture
        src={papers}
        aspectRatio="16:9"
        fix="cover"
        widths={[400]}
        sizes="(min-width: 320px) 100%"
        formats={['webp', 'png']}
        alt="Papers image"
        class={"w-full h-full object-cover"}
    />
    <div class="flex flex-col pt-4">
        <h2 class="pb-2">Call for Papers</h2>
        <p class="text-xl font-normal text-gray-600 pb-6">Want to share your ideas an insights?</p>
        <a
            id="apply-for-papers"
            class="w-full max-w-48 bg-orange-600 button-m text-white rounded
            py-4 px-4 hover:bg-orange-700 focus:outline-none"
            href="/call-for-papers"
        >
            Apply for a spot
        </a>
    </div>
</div>