---
import { Picture } from '@astrojs/image/components';

const { image, title, speaker, speakerCompany, video } = Astro.props;
---

<div class="flex flex-wrap mx-auto">
    <div class="flex items-center justify-center basis-1/2 md:basis-1/3 p-4">
        {image !== undefined ? 
            <Picture
                src={image}
                aspectRatio="16:9"
                fix="cover"
                widths={[240, 480]}
                sizes=""
                formats={['webp', 'png']}
                alt={title + ' - ' + speaker + ' - ' + speakerCompany}
                class={"w-full h-full object-cover"}
                loading={'lazy'}
            />
        : null }
    </div>
    <div class="basis-1/2 md:basis-2/3 p-4">
        <h4 class="pb-3">{title}</h4>
        <p class="text-l font-normal text-gray-600 pb-8">
            {speaker} - {speakerCompany}
        </p>
    </div>
</div>