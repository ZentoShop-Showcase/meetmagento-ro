---
import Layout from '../layouts/Layout.astro';
import BannerPreEvent from '../components/Home/BannerPreEvent.astro';
import CallForPapers from '../components/Home/CallForPapers.astro';
import CallForSponsors from '../components/Home/CallForSponsors.astro';
import Sponsors from '../components/Home/Sponsors.astro';
import Venue from '../components/Home/Venue.astro';
import Newsletter from '../components/Newsletter.astro';

import { SponsorsData } from '../components/Sponsors/data-sponsors';

---

<Layout title="Welcome to MMRO">
	<main>
		<BannerPreEvent />
		<div class="container flex items-center flex-wrap mx-auto pb-20 sm:pb-26 md:flex-nowrap md:gap-6">
			<CallForPapers />
			<CallForSponsors />
		</div>
		<Venue />
		<Sponsors sponsors={SponsorsData}/>
		<Newsletter />
	</main>
</Layout>
